<Window x:Class="LegoBluetoothController.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LEGO Powered Up Controller" Height="653" Width="1045">
    <Grid Margin="0,0,0,0">
        <Button x:Name="DiscoverButton" Content="Discover" Click="DiscoverButton_Click" HorizontalAlignment="Left" Margin="748,490,0,0" VerticalAlignment="Top" Height="30" Width="130"/>
        <TextBox x:Name="LogMessages" IsReadOnly="True" HorizontalAlignment="Left" Margin="34,382,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="604" Height="162"/>
        <Button x:Name="ChangeLedColorButton" Content="Change LED Color" Click="ChangeLedColorButton_Click" HorizontalAlignment="Left" Margin="450,27,0,0" VerticalAlignment="Top" Height="30" Width="130"/>
        <Button x:Name="ShutdownButton" Content="Shutdown" Click="ShutdownButton_Click" HorizontalAlignment="Left" Margin="364,87,0,0" VerticalAlignment="Top" Width="130" Height="30"/>
        <Label Content="Connected Hubs" Margin="756,352,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150" Height="30"/>
        <TextBox x:Name="ConnectedHubs" IsReadOnly="True" Text="" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="756,382,0,0" Width="100" Height="100"/>
        <Label Content="Log Messages" HorizontalAlignment="Left" Margin="34,351,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="RawCommandText" HorizontalAlignment="Left" Margin="34,88,0,0" Text="Enter command here" TextWrapping="Wrap" VerticalAlignment="Top" Width="179" Height="29"/>
        <ComboBox x:Name="HubSelect" SelectionChanged="HubSelect_SelectionChanged" HorizontalAlignment="Left" Margin="34,27,0,0" VerticalAlignment="Top" Width="167" Height="30"/>
        <Button x:Name="ExecuteCommandButton" Content="Execute" Click="ExecuteCommandButton_Click" HorizontalAlignment="Left" Margin="241,88,0,0" VerticalAlignment="Top" Width="73" Height="29"/>
        <ComboBox x:Name="ColorSelect" HorizontalAlignment="Left" Margin="241,27,0,0" VerticalAlignment="Top" Width="167" Height="30"/>
        <TextBox x:Name="ConnectedDevices" IsReadOnly="True" Text="" TextWrapping="Wrap" Margin="623,52,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Height="100"/>
        <Label Content="Connected Devices" Margin="623,15,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150" Height="30"/>
    </Grid>
</Window>
